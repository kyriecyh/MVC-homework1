@model IEnumerable<homework1.Models.客戶資料>

@{
    ViewBag.Title = "Index";
}

<h2>客戶資料</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("客戶名稱", "Index", new { sortStr = (string.IsNullOrEmpty(ViewBag.sortStr) ) ? "客戶名稱_desc" : "" })
        </th>
        <th>
            @Html.ActionLink("統一編號", "Index", new { sortStr = (ViewBag.sortStr == "統一編號") ? "統一編號_desc" : "統一編號" })
        </th>
        <th>
            @Html.ActionLink("電話", "Index", new { sortStr = (ViewBag.sortStr == "電話") ? "電話_desc" : "電話" })
        </th>
        <th>
            @Html.ActionLink("傳真", "Index", new { sortStr = (ViewBag.sortStr == "傳真") ? "傳真_desc" : "傳真" })
        </th>
        <th>
            @Html.ActionLink("地址", "Index", new { sortStr = (ViewBag.sortStr == "地址") ? "地址_desc" : "地址" })
        </th>
        <th>
            @Html.ActionLink("Email", "Index", new { sortStr = (ViewBag.sortStr == "Email") ? "Email_desc" : "Email" })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.客戶名稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.統一編號)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.電話)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.傳真)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.地址)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
